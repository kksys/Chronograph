  # Pods for Example
  pod 'Chronograph', '0.0.4-alpha0'
    
  target 'macOSTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'macOSUITests' do
    # Pods for testing
  end

  target 'Screenshot' do
    # Pods for screenshot
  end
end
